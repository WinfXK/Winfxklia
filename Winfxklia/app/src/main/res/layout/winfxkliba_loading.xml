<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:clipChildren="true"
              android:clipToPadding="true"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/winfxkliba_dialog_backg">

    <RelativeLayout
            android:layout_height="50dp"
            android:layout_width="match_parent">

        <com.winfxk.winfxklia.view.ImageView
                android:padding="8dp"
                android:layout_width="50dp"
                android:id="@+id/imageView1"
                android:src="@drawable/winfxkliba_info"
                android:scaleType="fitCenter"
                android:contentDescription="@string/winfxkliba_info"
                android:layout_height="match_parent"/>

        <TextView
                android:text="@string/winfxkliba_info"
                android:textSize="18sp"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/textView1"
                android:textColor="@color/winfxkliba_black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </RelativeLayout>

    <TextView
            android:background="#00a"
            android:layout_height="1dp"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:layout_width="match_parent"/>

    <ProgressBar
            android:max="100"
            android:progress="50"
            android:layout_height="3dp"
            android:id="@+id/progressBar1"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            style="?android:attr/progressBarStyleHorizontal"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="@string/winfxklia_app_name"
                android:id="@+id/textView2"
                android:layout_marginEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"/>

        <TextView
                android:gravity="center"
                android:text="@string/winfxklia_app_name"
                android:id="@+id/textView3"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"/>
    </RelativeLayout>
</LinearLayout>