<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="#00000000"
              android:layout_marginStart="10dp"
              android:orientation="horizontal"
              android:layout_marginEnd="10dp">

    <ImageView
            android:id="@+id/imageView1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:elevation="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/winfxkliba_toast_backg2"
            android:contentDescription="@string/winfxklia_app_name"
            android:rotation="-30"
            android:scaleType="fitCenter"
            android:src="@drawable/winfxkliba_toast_icon1"/>

    <RelativeLayout
            android:id="@+id/rinearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingTop="5dp"
            android:layout_marginStart="-10dp"
            android:paddingBottom="5dp"
            android:layout_marginBottom="50dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:background="@drawable/winfxkliba_toast_backg">

        <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/winfxklia_app_name"
                android:textColor="#ffffff"
                android:gravity="center_horizontal"
                android:textSize="15sp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>
    </RelativeLayout>

    <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/winfxkliba_toast_backg2"
            android:contentDescription="@string/winfxklia_app_name"
            android:rotation="30"
            android:scaleType="fitXY"
            android:src="@drawable/winfxkliba_toast_icon1"/>
</LinearLayout>