<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

    <TextView
            android:layout_marginTop="-13dp"
            android:layout_below="@id/imageView1"
            android:padding="13dp"
            android:background="@drawable/winfxkliba_tip_backg"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/winfxkliba_black"
            android:text="@string/winfxklia_app_name"
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <com.winfxk.winfxklia.view.ImageView
            android:gravity="bottom"
            android:id="@+id/imageView1"
            android:scaleType="fitCenter"
            android:src="@drawable/winfxkliba_tip_icon1"
            android:layout_width="wrap_content"
            android:layout_height="60dp"/>
</RelativeLayout>