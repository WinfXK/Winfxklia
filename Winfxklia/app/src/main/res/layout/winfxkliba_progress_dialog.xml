<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView1"
        android:background="#00000000"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="match_parent"
            android:minHeight="100dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/winfxkliba_dialog_backg"
            android:clipChildren="true"
            android:clipToPadding="true"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="match_parent"
                android:text="@string/winfxkliba_info"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/winfxkliba_black"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/textView1"
                android:gravity="center_vertical|center_horizontal"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@id/textView2"
                android:background="@color/winfxkliba_dialog_line"
                android:layout_below="@id/textView1"/>

        <RelativeLayout
                android:id="@+id/rinearLayout1"
                android:layout_below="@id/textView2"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/line2"
                    android:orientation="horizontal"
                    android:minHeight="20dp"
                    android:layout_height="wrap_content">

                <ProgressBar
                        android:padding="5dp"
                        android:layout_height="60dp"
                        android:id="@+id/progressBar"
                        android:layout_width="match_parent"
                        android:contentDescription="@string/winfxklia_app_name"
                        style="@android:style/Widget.Material.ProgressBar"/>

                <com.winfxk.winfxklia.view.ImageView
                        android:padding="5dp"
                        android:src="@drawable/winfxkliba_info"
                        android:layout_height="60dp"
                        android:id="@+id/imageView1"
                        android:scaleType="fitCenter"
                        android:layout_width="match_parent"
                        android:contentDescription="@string/winfxklia_app_name"/>
            </RelativeLayout>

            <TextView
                    android:text="@string/winfxklia_app_name"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:id="@+id/textView3"
                    android:layout_below="@id/line2"
                    android:textColor="@color/winfxkliba_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"/>
        </RelativeLayout>

        <LinearLayout
                android:id="@+id/line1"
                android:minHeight="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rinearLayout1">

        </LinearLayout>
    </RelativeLayout>
</ScrollView>