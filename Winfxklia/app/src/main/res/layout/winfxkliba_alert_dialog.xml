<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scrollView1"
        android:background="#00000000"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/winfxkliba_dialog_backg"
            android:gravity="center"
            android:clipChildren="true"
            android:clipToPadding="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:id="@id/line1"
                android:orientation="horizontal"
                android:layout_height="50dp">


            <RelativeLayout
                    android:layout_width="50dp"
                    android:padding="10dp"
                    android:id="@+id/line4"
                    android:layout_height="match_parent">

                <ProgressBar
                        android:alpha="0"
                        android:padding="5dp"
                        android:layout_height="match_parent"
                        android:id="@+id/progressBar"
                        android:layout_width="match_parent"
                        android:contentDescription="@string/winfxklia_app_name"
                        style="@android:style/Widget.Material.ProgressBar"
                        tools:ignore="NewApi"/>

                <com.winfxk.winfxklia.view.ImageView
                        android:layout_width="match_parent"
                        android:id="@+id/imageView1"
                        android:src="@drawable/winfxkliba_info2"
                        android:scaleType="fitCenter"
                        android:layout_height="match_parent"/>
            </RelativeLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="top"
                    android:layout_height="wrap_content"
                    android:text="@string/winfxklia_app_name"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="5dp"
                    android:textColor="@color/winfxkliba_black"
                    android:paddingEnd="5dp"
                    android:gravity="center_vertical|start"
                    android:id="@+id/textView1"/>
        </LinearLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/line1"
                android:id="@+id/textView2"
                android:background="#00a"/>

        <RelativeLayout
                android:layout_below="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:id="@+id/view">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:textColor="@color/winfxkliba_black"
                    android:textSize="18sp"
                    android:gravity="top|start"
                    android:padding="5dp"/>
        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/line2"
                android:layout_height="50dp"
                android:layout_below="@id/view"
                android:orientation="horizontal">
        </LinearLayout>
    </RelativeLayout>
</ScrollView>